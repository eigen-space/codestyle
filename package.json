{
    "name": "@eigenspace/codestyle",
    "version": "1.1.56",
    "description": "Eigenspace team's codestyle",
    "repository": "https://github.com/eigen-space/codestyle.git",
    "author": "Anton Kalashnikov <tohasan@yandex.ru>",
    "contributors": [
        "Anton Kalashnikov <tohasan@yandex.ru>",
        "Daniil Sitdikov <hello.boriskas@gmail.com>",
        "Nikita Sergeev <sergeev.nickitos@yandex.ru>",
        "Nikita Agupov <nktrsk@gmail.com>"
    ],
    "license": "MIT",
    "keywords": [
        "javascript",
        "nodejs",
        "rules",
        "style",
        "eslint",
        "typescript",
        "tsconfig"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint:fix",
            "git add"
        ]
    },
    "scripts": {
        "start": "yarn build && yarn lint:sandbox",
        "lint:code": "eslint",
        "lint": "yarn lint:code . && yarn lint:markdown",
        "lint:fix": "yarn lint:code --fix",
        "lint:markdown": "node src/scripts/markdown-lint.js",
        "script:copy": "node ./dev/scripts/copy.js",
        "compile": "tsc",
        "test": "jest --passWithNoTests",
        "build": "yarn script:copy",
        "deploy:publish": "node node_modules/@eigenspace/helper-scripts/scripts/ci/publish.js"
    },
    "devDependencies": {
        "@eigenspace/helper-scripts": "1.0.77",
        "@types/jest": "22.2.2",
        "@types/node": "10.12.21",
        "@typescript-eslint/eslint-plugin": "1.11.0",
        "@typescript-eslint/parser": "1.11.0",
        "eslint": "5.16.0",
        "eslint-plugin-prettier": "3.1.0",
        "eslint-plugin-unicorn": "9.1.1",
        "husky": "1.3.1",
        "jest": "24.7.1",
        "lint-staged": "8.1.5",
        "prettier": "1.18.2",
        "ts-jest": "24.0.2",
        "typescript": "3.3.1"
    },
    "peerDependencies": {
        "eslint": "5.x"
    }
}

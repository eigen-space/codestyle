{
    "name": "@eigenspace/codestyle",
    "version": "1.1.50",
    "description": "Eigenspace team's codestyle",
    "repository": "https://github.com/eigen-space/codestyle.git",
    "author": "Anton Kalashnikov <tohasan@yandex.ru>",
    "contributors": [
        "Anton Kalashnikov <tohasan@yandex.ru>",
        "Daniil Sitdikov <hello.boriskas@gmail.com>",
        "Nikita Sergeev <sergeev.nickitos@yandex.ru>",
        "Nikita Agupov <nktrsk@gmail.com>"
    ],
    "license": "MIT",
    "keywords": [
        "javascript",
        "nodejs",
        "rules",
        "style",
        "tslint",
        "typescript",
        "tsconfig"
    ],
    "scripts": {
        "dev": "tsc --outDir rules",
        "lint:dev": "yarn build && yarn tslint --project tsconfig.dev.json",
        "lint:markdown": "node ./scripts/markdown-lint.js",
        "script:copy": "node ./dev/scripts/copy.js",
        "script:markdown-lint": "node ./scripts/markdown-lint.js",
        "compile": "tsc",
        "test": "yarn compile && yarn jest",
        "build": "yarn compile && yarn script:copy",
        "deploy:publish": "node node_modules/@eigenspace/helper-scripts/scripts/ci/publish.js"
    },
    "bin": {
        "lint:markdown": "./scripts/markdown-lint.js"
    },
    "devDependencies": {
        "@eigenspace/helper-scripts": "1.0.40",
        "@types/jest": "22.2.2",
        "@types/node": "10.12.21",
        "jest": "23.6.0",
        "ts-jest": "23.10.5",
        "tslint": "5.12.1",
        "typescript": "3.3.1"
    },
    "jest": {
        "clearMocks": true,
        "collectCoverageFrom": [
            "src/**/*.{js,ts}"
        ],
        "testMatch": [
            "<rootDir>/rules/**/?(*.)(spec|test).ts"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^(?!.*\\.(js|ts|css|json)$)": "<rootDir>/config/jest/transform/file.transform.js",
            "^.+\\.ts$": "<rootDir>/config/jest/transform/typescript.transform.js"
        },
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/dist/"
        ],
        "moduleFileExtensions": [
            "web.ts",
            "ts",
            "web.js",
            "js",
            "json",
            "node"
        ]
    }
}
{
    "name": "@eigenspace/codestyle",
    "version": "1.1.54",
    "description": "Eigenspace team's codestyle",
    "repository": "https://github.com/eigen-space/codestyle.git",
    "author": "Anton Kalashnikov <tohasan@yandex.ru>",
    "contributors": [
        "Anton Kalashnikov <tohasan@yandex.ru>",
        "Daniil Sitdikov <hello.boriskas@gmail.com>",
        "Nikita Sergeev <sergeev.nickitos@yandex.ru>",
        "Nikita Agupov <nktrsk@gmail.com>"
    ],
    "license": "MIT",
    "keywords": [
        "javascript",
        "nodejs",
        "rules",
        "style",
        "tslint",
        "typescript",
        "tsconfig"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint:fix",
            "git add"
        ]
    },
    "scripts": {
        "start": "yarn build && yarn lint:sandbox",
        "lint": "tslint --project tsconfig.json && yarn lint:markdown",
        "lint:fix": "tslint --project tsconfig.json --fix",
        "lint:sandbox": "yarn tslint --project tsconfig.dev.json",
        "lint:markdown": "node ./scripts/markdown-lint.js",
        "script:copy": "node ./dev/scripts/copy.js",
        "compile": "tsc",
        "test": "jest",
        "build": "yarn compile && yarn script:copy",
        "deploy:publish": "node node_modules/@eigenspace/helper-scripts/scripts/ci/publish.js"
    },
    "devDependencies": {
        "@eigenspace/helper-scripts": "1.0.40",
        "@types/jest": "22.2.2",
        "@types/node": "10.12.21",
        "husky": "1.3.1",
        "jest": "24.7.1",
        "lint-staged": "8.1.5",
        "ts-jest": "24.0.2",
        "tslint": "5.12.1",
        "typescript": "3.3.1"
    }
}
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "dev"
    ],
    "exclude": [
        "node_modules",
        "src/sandbox",
        "**/tests"
    ]
}
